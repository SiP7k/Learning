using System;

namespace Start
{
    class Test
    {
        public static void Main()
        {
            string userInput = null;
            Console.WriteLine("Внимание! Произошла авария - введите пароль для ВЫХОДА из положения.");

            while (userInput != "exit")
            {
                userInput = Console.ReadLine();

                if (userInput == "exit")
                {
                    Console.WriteLine("Утечка топлива устранена");
                }
                else
                {
                    Console.WriteLine("Утечка топлива, необходим ВЫХОД из этой ужасной ситуации!");
                }
            }
        }
    }
}
