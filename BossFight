using System;

namespace Start
{
    class Test
    {
        public static void Main()
        {
            int playerHealth = 100;
            int playerPhysicalArmor = 100;
            int playerMagicArmor = 100;
            int bossHealth = 500;
            int bossPhysicalArmor = 300;
            int bossMagicArmor = 150;
            int playerDamage = 20;
            int bossDamage = 20;
            Console.WriteLine("Открывая тяжёлые двери Большого зала вы уже не удивляетесь, что происходит автосохранение." +
                " Доставая меч вы проклинаете разработчиков за предсказуемость этой игры");

            while (playerHealth > 0 && bossHealth>0)
            {
                if (bossPhysicalArmor == 0)
                { 
                    bossHealth -= playerDamage;
                    Console.WriteLine($"Вы бьёте босса посохом и наносите {playerDamage} урона");
                }

            }
        }
    }
}
